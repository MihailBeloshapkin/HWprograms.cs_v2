<Window x:Class="Gui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gui"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="15"/>
        </Style>
        <Style TargetType="ListBox">
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>
    <TabControl>
        <TabItem Header="Listing">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="64*"/>
                    <ColumnDefinition Width="134*"/>
                    <ColumnDefinition Width="199*"/>
                    <ColumnDefinition Width="199*"/>
                    <ColumnDefinition Width="199*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30*"/>
                    <RowDefinition Height="30*"/>
                    <RowDefinition Height="50*"/>
                    <RowDefinition Height="50*"/>
                    <RowDefinition Height="20*"/>
                    <RowDefinition Height="80*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Grid.Column="3" Grid.ColumnSpan="2" Margin="0,0,0,47" Grid.RowSpan="2">
                    <Label Content="IP:"/>
                    <TextBox x:Name="infoIP" MinWidth="200" Text="{Binding Path=Ip, Mode=TwoWay}"/>
                </StackPanel>
                <StackPanel Grid.Row="1" Grid.Column="3" Grid.ColumnSpan="2" Margin="0,0,198,78" Grid.RowSpan="2">
                    <Label Content="Port:"/>
                    <TextBox x:Name="infoPort" MinWidth="200" Text="{Binding Path=Port, Mode=TwoWay}"/>
                </StackPanel>
                <StackPanel Grid.Row="2" Grid.Column="3" Grid.ColumnSpan="2" Margin="0,0,198,78" Grid.RowSpan="2">
                    <Label Content="Show content from:"/>
                    <TextBox x:Name="showContent" MinWidth="200" Text="{Binding Path=showDirectory, Mode=TwoWay}"/>
                </StackPanel>
                <Button x:Name="Connect" Content="connect" Grid.Column="4" Grid.Row="0" Grid.RowSpan="2" Click="Connect_Click" Margin="14,15,15,15" />
                <Button x:Name="Show" Content="Show data" Grid.Column="4" Grid.Row="2" Click="Show_Click" Margin="14,15,15,15"/>
                <Button x:Name="Back" Content="Back" Grid.Column="3" Grid.Row="3" 
                        Click="Back_Click" Margin="15,15,16,15" Visibility="Visible"/>
                <ListBox x:Name="dataBox" Grid.Row="0" Grid.Column="0"
                         Grid.RowSpan="4" Grid.ColumnSpan="3" Margin="19,19,19,19"
                         ItemsSource="{Binding Path=DirectoriesAndFiles, Mode=OneWay}"
                         MouseDoubleClick="GetIntoFolder"
                         />
            </Grid>
        </TabItem>
        <TabItem Header="Getter">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30*"/>
                    <RowDefinition Height="30*"/>
                    <RowDefinition Height="100*"/>
                    <RowDefinition Height="20*"/>
                    <RowDefinition Height="80*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="2">
                    <Label Content="Download to:"/>
                    <TextBox x:Name="DownloadPath" MinWidth="200" Text="{Binding Path=DownloadPath, Mode=TwoWay}"/>
                </StackPanel>
                <StackPanel Grid.Row="0" Grid.Column="1">
                    <Label Content="Download from:"/>
                    <TextBox x:Name="DownloadFromPath" MinWidth="200" 
                             Text="{Binding Path=DownloadFromPath, Mode=OneWay}"/>
                </StackPanel>
                <Button x:Name="Get" Content="Get" Grid.Column="3" 
                        Grid.Row="0" Grid.RowSpan="2" Click="Download_Click"/>
                <Button x:Name="GetAll" Content="Download all"
                        Grid.Column="3" Grid.Row="2"
                        Click="Download_All_Click"/>
                <ListBox x:Name="Downloading" Grid.Row="2" Grid.Column="1"
                         Grid.ColumnSpan="2" Grid.RowSpan="2" 
                         ItemsSource="{Binding Path=Downloads, Mode=OneWay}"/>

            </Grid>
        </TabItem>
    </TabControl>
</Window>
