<Window x:Class="Gui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gui"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="15"/>
        </Style>
        <Style TargetType="ListBox">
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>
    <TabControl>
        <TabItem Header="Main">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30*"/>
                    <RowDefinition Height="30*"/>
                    <RowDefinition Height="100*"/>
                    <RowDefinition Height="20*"/>
                    <RowDefinition Height="80*"/>
                </Grid.RowDefinitions>
                
                <StackPanel Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="2">
                    <Label Content="IP:"/>
                    <TextBox x:Name="textBoxIP" MinWidth="200" Text="{Binding Path=Ip, Mode=TwoWay}"/>
                </StackPanel>
                <StackPanel Grid.Row="1" Grid.Column="2">
                    <Label Content="Port:"/>
                    <TextBox x:Name="textBoxPort" MinWidth="200" Text="{Binding Path=Port, Mode=TwoWay}"/>
                </StackPanel>
                <Button x:Name="Connect" Content="connect" Grid.Column="3" Grid.Row="0" Grid.RowSpan="2" Click="Connect_Click" />
                <TextBox Grid.Row="3" Grid.Column="0" MinWidth="200" x:Name="DownloadPath" Text="{Binding Path=PathToDownload, Mode=TwoWay}"/>
                <ListBox x:Name="dataBox" Grid.Row="0" Grid.Column="0" 
                         Grid.ColumnSpan="2" Grid.RowSpan="3" 
                         
                         ItemsSource="{Binding Path=DirectoriesAndFiles, Mode=OneWay}"
                         />
            </Grid>
        </TabItem>
    </TabControl>
</Window>
