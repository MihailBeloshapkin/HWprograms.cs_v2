@using MyNUnitWeb.Models;
@model IEnumerable<MyNUnitWeb.Models.TestReportModel>

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>MyNUnit</title>
</head>
<body>
    <main role="main" style="margin-top: 10rem">
        <div style="margin-bottom: 4rem">
            <h3>Assemblies:</h3>
            <form asp-action="AddAssembly" enctype="multipart/form-data">
                <input type="file" name="file" accept=".dll" />
                <input type="submit" value="Upload" />
            </form>

            <form asp-action="Clear" style="margin-top: 1rem">
                <input type="submit" value="Clear">
            </form>
            <form asp-action="ExecuteTests" method="post">
                <input type="submit" value="Run" class="btn btn-primary btn-lg" />
            </form>
        </div>
        <div class="resultArea">
            <table>
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Result</th>
                        <th>Ignore reason</th>
                        <th>Time</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (MyNUnitWeb.Models.TestReportModel p in Model)
                    {
                        var result = "";
                        var ignoreReason = "";
                        var time = "";
                        if (p.Passed == true)
                        {
                            result = "Success";
                            time = p.Time.ToString();
                        }
                        if (p.Passed == false)
                        {
                            result = "Failed";
                            time = p.Time.ToString();
                        }
                        if (p.Passed == null)
                        {
                            ignoreReason = p.WhyIgnored;
                            result = "Ignored";
                        }
                        <tr>
                            <td>@p.Name</td>
                            <td>@result</td>
                            <td>@ignoreReason</td>
                            <td>@time</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </main>
</body>
</html>
